<!-- SCRIPT SIMPLES PARA BOTAO DE PAGAMENTO SIMULADO -->
<script>
  document.getElementById('simPayBtn').addEventListener('click', function(){
    // Simulação: desbloqueia os palpites pagos nesta sessão
    alert('Pagamento simulado confirmado! Acesso premium liberado nesta sessão.');
    // mostrar histórico premium: aqui abrimos todas as linhas pagas na página
    // implementação simples: substitui as células de premium com o texto do palpite
    const rows = document.querySelectorAll('#dia table tr');
    rows.forEach(r=>{
      // procura linhas que contenham '🔒 Pago'
      if(r.innerHTML.includes('🔒 Pago')){
        r.cells[3].textContent = 'Palpite: (exemplo) — agora visível';
      }
    });
    // mostra histórico (em teste, assume que premium agora visível)
    // podes adicionar lógica mais avançada depois
  });
</script>
